@model FG12.Models.MatchMiddleStage

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MatchMiddleStage</legend>

        @Html.HiddenFor(model => model.Id)
        
        @Html.HiddenFor(m => m.HomeTeamId)
        @Html.HiddenFor(m => m.AwayTeamId)

        <div class="editor-label">
            @Html.LabelFor(model => model.HomeTeamGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomeTeamGoals)
            @Html.ValidationMessageFor(model => model.HomeTeamGoals)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AwayTeamGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AwayTeamGoals)
            @Html.ValidationMessageFor(model => model.AwayTeamGoals)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
