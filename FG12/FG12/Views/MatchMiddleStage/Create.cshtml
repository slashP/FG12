@model FG12.Models.MatchMiddleStage

@{
    ViewBag.Title = "Registrer kampresultat";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MatchMiddleStage</legend>
        <p style="color: red">@ViewBag.Error</p>

        <div class="editor-label">
            @Html.LabelFor(model => model.HomeTeamId, "HomeTeam")
        </div>
        <div class="editor-field">
            @Html.DropDownList("HomeTeamId", String.Empty)
            @Html.ValidationMessageFor(model => model.HomeTeamId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AwayTeamId, "AwayTeam")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AwayTeamId", String.Empty)
            @Html.ValidationMessageFor(model => model.AwayTeamId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HomeTeamGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HomeTeamGoals)
            @Html.ValidationMessageFor(model => model.HomeTeamGoals)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AwayTeamGoals)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AwayTeamGoals)
            @Html.ValidationMessageFor(model => model.AwayTeamGoals)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
